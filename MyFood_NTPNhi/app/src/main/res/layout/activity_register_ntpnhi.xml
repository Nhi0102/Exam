<?xml version="1.0" encoding="utf-8"?>
<!-- REGISTER SCREEN -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE6F6">

    <TextView
        android:id="@+id/tvTitle_NTPNhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#5E2D91"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etUsernameNTPNhi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:drawableStart="@android:drawable/ic_menu_myplaces"
        android:padding="12dp"
        android:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/tvTitle_NTPNhi"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <EditText
        android:id="@+id/etPasswordNTPNhi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:drawableStart="@android:drawable/ic_lock_lock"
        android:inputType="textPassword"
        android:padding="12dp"
        android:backgroundTint="@null"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etUsernameNTPNhi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <EditText
        android:id="@+id/etRePasswordNTPNhi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Re-enter Password"
        android:drawableStart="@android:drawable/ic_lock_lock"
        android:inputType="textPassword"
        android:padding="12dp"
        android:backgroundTint="@null"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/etPasswordNTPNhi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <ImageButton
        android:id="@+id/btnSubmitNTPNhi"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@null"
        android:backgroundTint="#5E2D91"
        android:src="@android:drawable/ic_media_next"
        android:scaleType="centerInside"
        android:contentDescription="Submit"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/etRePasswordNTPNhi"
        app:layout_constraintEnd_toEndOf="@id/etRePasswordNTPNhi" />

    <TextView
        android:id="@+id/tvLoginNTPNhi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="188dp"
        android:text="Bạn đã có tài khoản? Đăng nhập ngay"
        android:textAlignment="center"
        android:textColor="#5E2D91"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.8" />
</androidx.constraintlayout.widget.ConstraintLayout>